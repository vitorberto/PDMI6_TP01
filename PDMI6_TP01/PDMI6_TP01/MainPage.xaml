<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PDMI6_TP01.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Aplicação Teste" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Entry x:Name="idEntry" Placeholder="ID" Margin="30,10,30,10" />
        <Entry x:Name="passEntry" Placeholder="Password" IsPassword="true" Margin="30,10,30,10" />

        <FlexLayout Direction="Column" AlignItems="Center" JustifyContent="SpaceEvenly" Margin="0,100,0,0">
            <Button WidthRequest="300" Text="OK" Clicked="OnOkButtonClicked" />
            <Button WidthRequest="300" Text="Limpar" Clicked="OnClearButtonClicked" />
            <Button WidthRequest="300" Text="Créditos" Clicked="OnCreditsButtonClicked" />
        </FlexLayout>
    </StackLayout>

</ContentPage>
